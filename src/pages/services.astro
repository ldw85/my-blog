---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Review Services - TechReviews',
  description: 'Professional product review services to showcase your brand value',
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    tagline="Review Services"
    title="Professional, Unbiased Product Reviews"
    subtitle="We are committed to providing consumers with truthful, reliable product information and helping brands showcase their product value."
    actions={[{ variant: 'primary', text: 'Contact Us', href: '/contact' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'Review Services',
    }}
  />

  <!-- Services -->
  <Features2
    title="Our Services"
    subtitle="Comprehensive review solutions"
    columns={3}
    items={[
      {
        title: 'Single Product Reviews',
        description: 'In-depth experience reports covering appearance, performance, pros and cons',
        icon: 'tabler:star',
      },
      {
        title: 'Comparison Reviews',
        description: 'Multi-product横向 comparison to help consumers understand differences',
        icon: 'tabler:arrows-left-right',
      },
      {
        title: 'Rankings',
        description: 'Product rankings based on real experience and data',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Buying Guides',
        description: 'Comprehensive buying guides from beginner to expert',
        icon: 'tabler:book',
      },
      {
        title: 'Video Reviews',
        description: 'Video product showcases and experience sharing',
        icon: 'tabler:video',
      },
      {
        title: 'Custom Content',
        description: 'Customized content solutions for brand needs',
        icon: 'tabler:settings',
      },
    ]}
  />

  <!-- Review Process -->
  <Content
    title="Review Process"
    subtitle="Standardized process ensures quality"
    items={[
      {
        title: 'Product Receipt',
        description: 'Unboxing and initial inspection upon receiving product',
      },
      {
        title: 'Deep Experience',
        description: 'At least two weeks of real usage with daily notes',
      },
      {
        title: 'Performance Testing',
        description: 'Objective performance testing with professional equipment',
      },
      {
        title: 'Content Writing',
        description: 'Writing review reports combining subjective and objective data',
      },
      {
        title: 'Review & Publish',
        description: 'Content review before publishing for accuracy',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2426&q=80',
      alt: 'Review Process',
    }}
  />

  <!-- Testimonials -->
  <Testimonials
    title="Client Stories"
    subtitle="We've provided review services for multiple brands"
    testimonials={[
      {
        title: 'Professional & Unbiased',
        description: 'Professional and unbiased review content helped our products gain more attention and recognition from consumers.',
        author: 'Major Headphone Brand',
        avatar: 'https://images.unsplash.com/photo-1560250097-0b93528c311a?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
      },
      {
        title: 'High-Quality Content',
        description: 'Well-structured and detailed review articles - an important channel for consumers to understand products.',
        author: 'Smart Home Brand',
        avatar: 'https://images.unsplash.com/photo-1573496359142-b8d87734a5a2?ixlib=rb-4.0.3&auto=format&fit=crop&w=100&q=80',
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    title="Partner With Us"
    subtitle="Interested in collaboration? Contact us for more information"
    actions={[
      { variant: 'primary', text: 'Get in Touch', href: '/contact' },
    ]}
  />
</Layout>
