---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Us - TechReviews',
  description: 'Business cooperation, product reviews, submissions',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->
  <HeroText tagline="Contact Us" title="We'd Love to Hear From You" />

  <!-- Contact Form -->
  <ContactUs
    id="form"
    title="Send a Message"
    subtitle="Select a topic and we'll get back to you soon"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'text',
        name: 'subject',
        label: 'Subject',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label: 'By submitting this form, you agree to our collection of your personal information for responding to your inquiry.',
    }}
    description="We typically respond within 24 hours."
  />

  <!-- Contact Info -->
  <Features2
    title="Get in Touch"
    items={[
      {
        title: 'Product Reviews',
        description: 'Request a product review - send product info and review requirements',
        icon: 'tabler:star',
      },
      {
        title: 'Business Cooperation',
        description: 'Brand promotion and content partnerships',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Contributions',
        description: 'Submit articles or suggest topics',
        icon: 'tabler:message',
      },
      {
        title: 'Email',
        description: 'contact@techreviews.example.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Social Media',
        description: 'Follow us for the latest reviews',
        icon: 'tabler:brand-twitter',
      },
      {
        title: 'RSS Feed',
        description: 'Subscribe via RSS for latest articles',
        icon: 'tabler:rss',
      },
    ]}
  />
</Layout>
