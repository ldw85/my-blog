---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: '联系我们 - 科技优选',
  description: '商务合作、产品评测、投稿咨询',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget -->
  <HeroText tagline="联系我们" title="期待与你交流" />

  <!-- 联系表单 -->
  <ContactUs
    id="form"
    title="发送消息"
    subtitle="请选择联系类型，我们会尽快回复"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: '姓名',
      },
      {
        type: 'email',
        name: 'email',
        label: '邮箱',
      },
      {
        type: 'text',
        name: 'subject',
        label: '主题',
      },
    ]}
    textarea={{
      label: '留言内容',
    }}
    disclaimer={{
      label: '提交此表单即表示您同意我们收集您的个人信息用于回复您的咨询。',
    }}
    description="我们通常在 24 小时内回复。"
  />

  <!-- 联系方式 -->
  <Features2
    title="联系我们"
    items={[
      {
        title: '产品评测',
        description: '申请产品评测，请发送产品信息和评测需求',
        icon: 'tabler:star',
      },
      {
        title: '商务合作',
        description: '品牌推广、内容合作等商业事务请联系',
        icon: 'tabler:briefcase',
      },
      {
        title: '投稿建议',
        description: '欢迎投稿或提供选题建议',
        icon: 'tabler:message',
      },
      {
        title: '邮箱',
        description: 'contact@techreviews.example.com',
        icon: 'tabler:mail',
      },
      {
        title: '社交媒体',
        description: '关注我们获取最新评测动态',
        icon: 'tabler:brand-twitter',
      },
      {
        title: 'RSS 订阅',
        description: '通过 RSS 订阅获取最新文章',
        icon: 'tabler:rss',
      },
    ]}
  />
</Layout>
