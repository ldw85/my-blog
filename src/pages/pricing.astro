---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Membership - TechReviews',
  description: 'Get early access, exclusive discounts, priority replies',
};
---

<Layout metadata={metadata}>
  <!-- HeroText -->
  <HeroText
    tagline="Membership"
    title="Unlock Exclusive Benefits"
    subtitle="Support us to continue producing high-quality review content"
  />

  <!-- Subscription Plans -->
  <Prices
    title="Subscription Plans"
    subtitle="Choose the plan that fits you"
    prices={[
      {
        title: 'Free',
        subtitle: 'For casual users',
        price: 0,
        period: 'Free forever',
        items: [
          {
            description: 'Read all review articles',
          },
          {
            description: 'View product rankings',
          },
          {
            description: 'Participate in discussions',
          },
          {
            description: 'RSS subscription',
          },
        ],
        callToAction: {
          text: 'Sign Up Free',
          href: '#',
        },
        hasRibbon: false,
      },
      {
        title: 'Pro Member',
        subtitle: 'For power users',
        price: 9.9,
        period: '/month',
        items: [
          {
            description: 'All Free benefits',
          },
          {
            description: 'Get new reviews 48 hours early',
          },
          {
            description: 'Exclusive buying guides',
          },
          {
            description: 'Member-only discount codes',
          },
          {
            description: 'Priority comment replies',
          },
          {
            description: 'Monthly Newsletter',
          },
        ],
        callToAction: {
          text: 'Subscribe Now',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Popular',
      },
      {
        title: 'Annual Member',
        subtitle: 'Best value',
        price: 99,
        period: '/year',
        items: [
          {
            description: 'All Pro benefits',
          },
          {
            description: 'Annual exclusive offers',
          },
          {
            description: 'Priority review access',
          },
          {
            description: 'Exclusive community access',
          },
          {
            description: 'Birthday gift',
          },
        ],
        callToAction: {
          text: 'Save 20% with Annual',
          href: '#',
        },
        hasRibbon: false,
      },
    ]}
  />

  <!-- Benefits -->
  <Features3
    title="Membership Benefits"
    subtitle="Subscribe for more value"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Early Access',
        description: 'Read new reviews 48 hours before public release',
        icon: 'tabler:clock',
      },
      {
        title: 'Exclusive Discounts',
        description: 'Special discount codes for partner e-commerce platforms',
        icon: 'tabler:discount',
      },
      {
        title: 'Priority Replies',
        description: 'Comments get优先 replies from our team',
        icon: 'tabler:messages',
      },
      {
        title: 'Buying Guides',
        description: 'Member-exclusive in-depth buying guides',
        icon: 'tabler:book',
      },
      {
        title: 'Monthly Newsletter',
        description: 'Curated monthly content summary',
        icon: 'tabler:mail',
      },
      {
        title: 'Priority Reviews',
        description: 'First access to new product reviews',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- FAQ -->
  <FAQs
    title="Frequently Asked Questions"
    subtitle="Common questions about membership"
    items={[
      {
        title: 'Can I cancel anytime?',
        description: 'Yes, you can cancel anytime. Service continues until the end of your current billing period.',
      },
      {
        title: 'What payment methods are supported?',
        description: 'We support credit cards, PayPal, and other major payment methods.',
      },
      {
        title: 'How long is the membership valid?',
        description: 'Monthly membership is valid for 30 days, annual membership is valid for 365 days.',
      },
      {
        title: 'Can I get an invoice?',
        description: 'Yes, please contact support for invoice information.',
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    title="Have Questions?"
    subtitle="Contact support for help"
    actions={[
      { variant: 'secondary', text: 'Contact Us', href: '/contact' },
    ]}
  />
</Layout>
