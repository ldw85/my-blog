---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: '会员订阅 - 科技优选',
  description: '获取更早评测、专属优惠、优先回复',
};
---

<Layout metadata={metadata}>
  <!-- HeroText -->
  <HeroText
    tagline="会员订阅"
    title="解锁更多专属权益"
    subtitle="支持我们持续产出高质量评测内容"
  />

  <!-- 订阅方案 -->
  <Prices
    title="订阅方案"
    subtitle="选择适合你的方案"
    prices={[
      {
        title: '免费',
        subtitle: '适合普通用户',
        price: 0,
        period: '永久免费',
        items: [
          {
            description: '阅读所有评测文章',
          },
          {
            description: '查看产品榜单',
          },
          {
            description: '参与评论讨论',
          },
          {
            description: 'RSS 订阅',
          },
        ],
        callToAction: {
          text: '免费注册',
          href: '#',
        },
        hasRibbon: false,
      },
      {
        title: 'Pro 会员',
        subtitle: '适合重度用户',
        price: 9.9,
        period: '/月',
        items: [
          {
            description: '免费用户全部权益',
          },
          {
            description: '提前 48 小时获取新评测',
          },
          {
            description: '专属选购指南',
          },
          {
            description: '会员专属折扣码',
          },
          {
            description: '优先回复评论',
          },
          {
            description: '月度Newsletter',
          },
        ],
        callToAction: {
          text: '立即订阅',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: '热门',
      },
      {
        title: '年度会员',
        subtitle: '最划算的选择',
        price: 99,
        period: '/年',
        items: [
          {
            description: 'Pro 会员全部权益',
          },
          {
            description: '年度专属优惠',
          },
          {
            description: '优先评测资格',
          },
          {
            description: '专属社群入群资格',
          },
          {
            description: '生日专属礼品',
          },
        ],
        callToAction: {
          text: '年付省 20%',
          href: '#',
        },
        hasRibbon: false,
      },
    ]}
  />

  <!-- 会员权益 -->
  <Features3
    title="会员权益说明"
    subtitle="订阅会员获取更多价值"
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: '提前获取评测',
        description: '新评测上线前提前 48 小时阅读，了解产品优缺点',
        icon: 'tabler:clock',
      },
      {
        title: '专属折扣码',
        description: '合作电商平台的专属优惠码，享受额外折扣',
        icon: 'tabler:discount',
      },
      {
        title: '优先回复',
        description: '评论优先获得回复，与评测团队更近距离',
        icon: 'tabler:messages',
      },
      {
        title: '选购指南',
        description: '会员专属的深度选购指南，涵盖各品类',
        icon: 'tabler:book',
      },
      {
        title: '月度Newsletter',
        description: '每月精选内容汇总，不错过好产品',
        icon: 'tabler:mail',
      },
      {
        title: '优先评测资格',
        description: '新产品的优先评测机会，了解第一手信息',
        icon: 'tabler:star',
      },
    ]}
  />

  <!-- FAQ -->
  <FAQs
    title="常见问题"
    subtitle="关于订阅的常见问题"
    items={[
      {
        title: '订阅后可以取消吗？',
        description: '可以随时取消，取消后服务持续到当前订阅周期结束。',
      },
      {
        title: '支持哪些支付方式？',
        description: '支持微信、支付宝、信用卡等主流支付方式。',
      },
      {
        title: '会员有效期是多久？',
        description: '月付会员有效期为 30 天，年付会员有效期为 365 天。',
      },
      {
        title: '可以开发票吗？',
        description: '可以开发票，请联系客服提供开票信息。',
      },
    ]}
  />

  <!-- CTA -->
  <CallToAction
    title="有问题？"
    subtitle="联系客服获取帮助"
    actions={[
      { variant: 'secondary', text: '联系客服', href: '/contact' },
    ]}
  />
</Layout>
