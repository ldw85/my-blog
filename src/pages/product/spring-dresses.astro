<style is:global>
  /* Override intersection animations for Hero section - show immediately */
  .hero-section .intersect-once {
    opacity: 1 !important;
  }
  .hero-section .motion-safe\:md\:opacity-0 {
    opacity: 1 !important;
  }
  .hero-section {
    animation: none !important;
  }
</style>

