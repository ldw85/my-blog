---
import Layout from '~/layouts/LandingLayout.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';

const metadata = {
  title: 'Spring Collection 2026 - Elegant Women\'s Dresses | Spring Fashion Sale',
  description: 'Discover our stunning spring dress collection. Floral prints, light fabrics, and elegant styles perfect for any occasion. Up to 40% off this season.',
};
---

<style is:global>
  /* Override intersection animations for Hero section - show immediately */
  .hero-section .intersect-once {
    opacity: 1 !important;
  }
  .hero-section .motion-safe\:md\:opacity-0 {
    opacity: 1 !important;
  }
  .hero-section {
    animation: none !important;
  }
</style>

<Layout metadata={metadata}>
  <!-- Optimized Hero Section -->
  <section class="relative md:-mt-[76px] not-prose hero-section">
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6">
      <div class="py-12 md:py-20">
        <div class="text-center pb-10 md:pb-16 max-w-5xl mx-auto">
          <p class="text-base text-secondary dark:text-blue-200 font-bold tracking-wide uppercase">
            Spring Sale - Up to 40% Off
          </p>
          <h1 class="text-5xl md:text-6xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200">
            Spring Collection 2026
          </h1>
          <div class="max-w-3xl mx-auto">
            <p class="text-xl text-muted mb-6 dark:text-slate-300">
              Embrace the season with our curated selection of elegant spring dresses. From casual daywear to stunning evening gowns, find your perfect look.
            </p>
            <div class="max-w-xs sm:max-w-md m-auto flex flex-nowrap flex-col sm:flex-row sm:justify-center gap-4">
