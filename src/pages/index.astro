      <h2 class="text-3xl font-bold tracking-tight sm:text-4xl mb-8 text-center">
        üìä Popular Rankings
      </h2>
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Electronics Rankings -->
        <a
          href="/blog"
          class="block p-6 rounded-xl bg-white dark:bg-slate-800 shadow-md hover:shadow-lg transition-shadow"
        >
          <div class="flex items-center gap-4 mb-4">
            <div class="text-3xl">üèÜ</div>
            <div>
              <h3 class="text-xl font-semibold">Electronics Rankings</h3>
              <p class="text-sm text-muted">2025 Top Picks</p>
            </div>
          </div>
          <ul class="space-y-3">
            <li class="flex items-center gap-2">
              <span class="text-blue-600 font-bold">1</span>
              <span>Sony WH-1000XM5 Review</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-blue-600 font-bold">2</span>
              <span>iPhone 16 Pro Deep Dive</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-blue-600 font-bold">3</span>
              <span>Keychron Q1 Pro Mechanical Keyboard</span>
            </li>
          </ul>
        </a>

        <!-- AI Tools Rankings -->
        <a
          href="/blog"
