---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getBlogPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'TechReviews - Your Guide to Consumer Electronics & AI Tools',
  description: 'Expert, unbiased reviews of consumer electronics and AI tools. Headphones, phones, mechanical keyboards, AI software and more.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="TechReviews"
    title="Your Guide to Consumer Electronics & AI Tools"
    subtitle="Expert, unbiased product reviews and recommendations.<br />Find the perfect headphones, phones, keyboards, and AI tools."
    actions={[
      { variant: 'primary', text: 'Start Exploring', href: '#categories' },
      { variant: 'secondary', text: 'View Rankings', href: '/blog' },
    ]}
    image={{
      src: '~/assets/images/hero-image.png',
      alt: 'TechReviews Hero',
    }}
  />

  <!-- Two Main Categories -->
  <section id="categories" class="py-16 not-prose">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Consumer Electronics -->
        <a
          href="/blog"
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-slate-900 to-slate-800 p-8 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
        >
          <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=800&q=80')] bg-cover bg-center opacity-20"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-slate-900/90 to-transparent"></div>
          <div class="relative z-10">
            <div class="text-5xl mb-4">üéß</div>
            <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
              Consumer Electronics
            </h3>
            <p class="text-slate-300 mb-4">
              Hardware product reviews, comparisons, and buying guides
            </p>
            <div class="flex flex-wrap gap-2 text-sm">
              <span class="px-3 py-1 bg-white/10 rounded-full text-slate-300">Headphones</span>
              <span class="px-3 py-1 bg-white/10 rounded-full text-slate-300">Phones</span>
              <span class="px-3 py-1 bg-white/10 rounded-full text-slate-300">Keyboards</span>
              <span class="px-3 py-1 bg-white/10 rounded-full text-slate-300">Smart Home</span>
            </div>
          </div>
        </a>

        <!-- AI & SaaS -->
        <a
          href="/blog"
          class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-purple-900 to-indigo-900 p-8 hover:shadow-2xl transition-all duration-300 hover:-translate-y-1"
        >
          <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1677442136019-21780ecad995?w=800&q=80')] bg-cover bg-center opacity-20"></div>
          <div class="absolute inset-0 bg-gradient-to-t from-purple-900/90 to-transparent"></div>
          <div class="relative z-10">
            <div class="text-5xl mb-4">ü§ñ</div>
            <h3 class="text-2xl font-bold text-white mb-2 group-hover:text-purple-400 transition-colors">
              AI & SaaS Tools
            </h3>
            <p class="text-purple-200 mb-4">
              AI products, SaaS tools, and tech news
            </p>
            <div class="flex flex-wrap gap-2 text-sm">
              <span class="px-3 py-1 bg-white/10 rounded-full text-purple-200">ChatGPT</span>
              <span class="px-3 py-1 bg-white/10 rounded-full text-purple-200">Claude</span>
              <span class="px-3 py-1 bg-white/10 rounded-full text-purple-200">SaaS</span>
              <span class="px-3 py-1 bg-white/10 rounded-full text-purple-200">Productivity</span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Reviews -->
  <BlogLatestPosts
    title="üéØ Latest Reviews"
    information="Fresh product reviews and in-depth‰ΩìÈ™å reports"
    count={6}
  />

  <!-- Popular Rankings -->
  <section class="py-16 not-prose">
