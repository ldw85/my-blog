---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About Us - TechReviews',
  description: 'Expert reviews of consumer electronics and AI tools',
};
---

<Layout metadata={metadata}>
  <!-- Hero -->
  <Hero
    tagline="About Us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'TechReviews',
    }}
  >
    <Fragment slot="title">
      Helping you make <span class="text-accent dark:text-white">better purchase decisions</span>
    </Fragment>
    <Fragment slot="subtitle">
      We are a dedicated team focusing on consumer electronics and AI tools. We believe in the power of products and strive to provide professional, unbiased, and valuable purchase recommendations.
    </Fragment>
  </Hero>

  <!-- Our Review Methodology -->
  <Steps2
    title="Our Review Methodology"
    subtitle="Every review goes through rigorous testing to ensure objectivity"
    items={[
      {
        title: 'Real Usage Experience',
        description: 'Each product is used for at least 2 weeks in real-world scenarios',
      },
      {
        title: 'Objective Test Data',
        description: 'Professional equipment ensures accurate and reliable test results',
      },
      {
        title: 'Independent Opinions',
        description: 'We maintain independent reviews without manufacturer influence',
      },
      {
        title: 'Continuous Updates',
        description: 'Reviews are updated when products are refreshed',
      },
    ]}
  />

  <!-- Review Categories -->
  <Features3
    title="Review Categories"
    subtitle="Coverage across consumer electronics and AI tools"
    columns={3}
    isBeforeContent={true}
    items={[
      {
